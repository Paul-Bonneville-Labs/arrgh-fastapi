# Test Environment Configuration Template
# Copy this to .env.test and customize for your test setup
ENVIRONMENT=test

# API Authentication
API_KEY=test-api-key

# LLM Configuration (fake keys for testing)
OPENAI_API_KEY=sk-test-fake-key-for-testing-do-not-use
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=100

# Neo4j Configuration (Test)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=test-password
NEO4J_DATABASE=neo4j

# Processing Configuration (Test limits)
MAX_ENTITIES_PER_NEWSLETTER=10
FACT_EXTRACTION_BATCH_SIZE=5
PROCESSING_TIMEOUT=60
ENTITY_CONFIDENCE_THRESHOLD=0.7
FACT_CONFIDENCE_THRESHOLD=0.8

# Application Configuration
API_HOST=127.0.0.1
API_PORT=8000
LOG_LEVEL=DEBUG

# Monitoring & Logging
ENABLE_METRICS=false
METRICS_PORT=9090

# Feature Flags (Test)
ENABLE_ASYNC_PROCESSING=false
ENABLE_ENTITY_CACHING=false
ENABLE_DEBUG_MODE=true

# Development Settings (Test)
JUPYTER_PORT=8888
JUPYTER_TOKEN=test-token

# Google Cloud Configuration (Test)
GOOGLE_CLOUD_PROJECT=test-project
GOOGLE_CLOUD_REGION=us-central1

# Security Configuration
SECRET_KEY=test-secret-key

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]