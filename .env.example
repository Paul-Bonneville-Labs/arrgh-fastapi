# Local Development Environment Template
# Copy this to .env.local and customize for your development setup

# Environment
ENVIRONMENT=local

# API Authentication
API_KEY=your-api-key-here

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Neo4j Configuration (Local Docker)
# Start with: ./scripts/start-neo4j.sh
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# Processing Configuration
MAX_ENTITIES_PER_NEWSLETTER=100
FACT_EXTRACTION_BATCH_SIZE=10
PROCESSING_TIMEOUT=300
ENTITY_CONFIDENCE_THRESHOLD=0.7
FACT_CONFIDENCE_THRESHOLD=0.8

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=DEBUG

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags (Development)
ENABLE_ASYNC_PROCESSING=false
ENABLE_ENTITY_CACHING=true
ENABLE_DEBUG_MODE=true

# Development Settings
JUPYTER_PORT=8888
JUPYTER_TOKEN=dev-token-local

# Google Cloud Configuration (for testing)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Security Configuration
SECRET_KEY=your-secret-key-here

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]